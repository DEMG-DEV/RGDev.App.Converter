{
    "name": "rgdev-media-converter",
    "version": "1.0.0",
    "description": "Batch media converter to WebP and WebM",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dev": "electron .",
        "build:css": "tailwindcss -i ./src/input.css -o ./dist/output.css",
        "dev:css": "tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
        "dist": "electron-builder"
    },
    "build": {
        "appId": "com.rgdev.mediaconverter",
        "publish": "github",
        "productName": "Media Converter",
        "directories": {
            "output": "release"
        },
        "files": [
            "**/*",
            "!src/**/*",
            "!tailwind.config.js"
        ],
        "mac": {
            "category": "public.app-category.video",
            "target": [
                "dmg",
                "zip"
            ]
        },
        "win": {
            "target": [
                "nsis",
                "portable"
            ]
        },
        "linux": {
            "target": [
                "AppImage"
            ]
        }
    },
    "keywords": [
        "electron",
        "ffmpeg",
        "converter",
        "webp",
        "webm"
    ],
    "author": "RGDev",
    "license": "ISC",
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^26.0.12",
        "tailwindcss": "^3.4.0"
    },
    "dependencies": {
        "ffmpeg-static": "^5.3.0",
        "ffprobe-static": "^3.1.0",
        "fluent-ffmpeg": "^2.1.2"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "electron",
            "ffmpeg-static"
        ]
    }
}